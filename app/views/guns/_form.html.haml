= form_for @gun do |f|
  - if @gun.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gun.errors.count, "error")} prohibited this gun from being saved:"
      %ul
        - @gun.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
